@import "variables";
.module, .modal {
  a.disabled {
    pointer-events: none;
    cursor: not-allowed;
    color: $primary-gray;
  }
  &.flash {
    .col-xs-12 {
      max-width: 1170px;
      width: 100%;
      margin: auto;
      display: block;
      float: none;
    }
  }
  .no-vertical-margin {
    margin-top: 0;
    margin-bottom: 0;
  }
  .no-vertical-padding {
    padding-top: 0;
    padding-bottom: 0;
  }
  .no-bottom-padding {
    padding-bottom: 0;
  }
  .enroll-checkbox {
    input[type=checkbox] {
      display: none;
      + label > i.fa {
        color: #69A30D;
      }
    }
    .checkbox {
      margin: 0;
      padding: 0;
    }
    .checkbox {
      &>div {
        display: inline-block;
        margin: auto;
      }
    }
    .checkbox label {
      padding-left: 0;
    }
    .checkbox label label {
      display: table;
      padding-left: 0;
      &>* {
        display: table-cell;
        vertical-align: middle;
        text-align: left;
      }
      span {
        font-size: 12px;
        display: inline-block;
      }
    }
    .checkbox label label + span {
      display: inline-block;
      position: relative;
      text-transform: capitalize;
      font-size: 16px;
      top: -5px;
      left: 10px;
    }
    input[type=checkbox]:disabled + label i {
      color: #b7b7b7;
      cursor: not-allowed;
    }
    input[type=checkbox] + label i {
      &:first-of-type {
        display: none;
      }
      &:last-of-type {
        display: inline-block;
        width: 30px;
      }
    }
    input[type=checkbox]:checked + label i {
      &:first-of-type {
        display: inline-block;
        width: 30px;
      }
      &:last-of-type {
        display: none;
      }
    }
  }
  .enroll-label {
    font-weight: $float-labels-weight;
    color: $float-labels-color;
    font-size: $float-labels-text-size;
    text-transform: $float-labels-casing;
  }
  .label {
    &.inactive, &.canceled {
      background-color: $primary-gray;
    }
    &.employment_terminated {
      background-color: $primary-red;
    }
  }
  .census-employee-details .n-radio-row {
    border: none !important;
    padding: inherit;
  }
  .no-vertical-padding {
    padding-top: 0;
    padding-bottom: 0;
  }
  .no-bottom-padding {
    padding-bottom: 0;
  }
  .selectric-labeled {
    padding: 0 0 0 10px;
    width: 100%;
    white-space: nowrap;
    &>* {
      display:table-cell;
      width:100%;
      text-align: center;
      vertical-align:middle;
      white-space: normal;
    }
    span {
      width:100%;
      max-width: 25%;
      display: inline-block;
      font-size: 10px;
      color: rgb(131, 135, 128);
      text-transform: uppercase;
      text-align: left;
      line-height: 1.2;
      strong {
        font-weight: bold;
      }
    }
    .selectric-wrapper {
      width:100%;
      max-width: 75%;
      display: inline-block;
    }
  }
  .vertically-aligned-row {
    display: table;
    width: 100%;
    &.auto-width {
      width: auto !important;
    }
    >* {
      display: table-cell;
      float: none;
      vertical-align: middle;
      &.vertical-align-top {
        vertical-align: top !important;
      }
    }
  }
  .date-field {
    font-family: FontAwesome;
  }
}
