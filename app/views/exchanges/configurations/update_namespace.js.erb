<% if @result.success? %>
  $("#<%= @path.gsub('.', '-') %>-alert").html("<div class='alert alert-success alert-dismissible fade show' role='alert'><button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button>Namespace features updated successfully.</div>").delay(3000).alert('clsoe');
<% else %>
  $("#<%= @path.gsub('.', '-') %>-alert").html("<div class='alert alert-danger fade show' role='alert'><button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button>Namespace update failed due to <%= @feature.failure.errors %>.</div>");
<% end %>
