<%= render partial: "ui-components/v1/navs/primary_nav" %>

<% content_for :head do %>
  <%= javascript_include_tag 'standalone_effective_datatables' %>
  <%#= stylesheet_link_tag 'standalone_effective_datatables' %>
<% end %>

<div class="container" style="height: 100%;">
  <div class="row mt-4 bottom-pd" id="configurations">
    <div class="col-md-12">
      <h1 class="heading-text">Configurations</h1>
    </div>
    <div class="col-md-3 sidebar">
      <%= render_configuration_navigation_menu %>
    </div>
    <div class="col-md-9 main">
      <div id="data_container"></div>
    </div>
  </div>
</div>

<script>
  $(function(){
    $('#configurations .nav-link').click(function(e) {
      $('.highlight').removeClass('highlight');

      hasClass = $(this).hasClass('highlight');
      if (!hasClass) {
        $(this).addClass('highlight')
      }

      const feature = $(this).data()['feature'];
      if (feature) {
        $.ajax({
          url: ("/exchanges/configurations/"+ feature +"/namespace_edit"),
          type: 'GET'
        })
      }
    });
  });
</script>

<style>
	body {
		font-size: 1rem;
		line-height: 1.5;
	}

	h4 {
		font-weight: 500;
		line-height: 1.2;
	}

  #configurations {
    height: 100%;
    width: 100%;
  }

  #configurations .sidebar {
    background-color: #e6e6e6;
  }

  #configurations .list-group {
    color: black;
    background-color: #fff;
  }

  #uic-primary-nav ul {
    margin-top: 0;
  }

  .toggle.btn-primary, .toggle-group .btn-primary {
    color: #fff;
    background-color: #007bff;
    border-color: #007bff;
    text-transform: none;
    border-bottom-width: inherit;
  }

	.toggle-on.btn { padding-right: 1rem; }
	.toggle-off.btn { padding-left: 1rem; }
  .toggle.ios, .toggle-on.ios, .toggle-off.ios { border-radius: 20rem; }
  .toggle.ios .toggle-handle { border-radius: 20rem; }

  .switch input {
      display:none;
  }
  .switch {
      display:inline-block;
      width:50px;
      height:25px;
      margin: 8px;
      margin-top: 0px;
      transform:translateY(50%);
      position:relative;
  }
  /* Style Wired */
  .switch > .slider {
      position:absolute;
      top:0;
      bottom:0;
      left:0;
      right:0;
      border-radius:25px;
      box-shadow:0 0 0 2px #777, 0 0 4px #777;
      cursor:pointer;
      border:4px solid transparent;
      overflow:hidden;
       transition:.4s;
  }
  .switch > .slider:before {
      position:absolute;
      content:"";
      width:100%;
      height:100%;
      background:#777;
      border-radius:25px;
      transform:translateX(-25px);
      transition:.4s;
  }
  .switch > input:checked + .slider:before {
      transform:translateX(25px);
      background:limeGreen;
  }
  .switch > input:checked + .slider {
      box-shadow:0 0 0 2px limeGreen,0 0 2px limeGreen;
  }

  .bottom-pd {
    height: 100%;
  }

  .highlight {
    border-left: #007bc4 solid 5px;
  }

  .sidebar {
    overflow: scroll;
    height: 100%;
    padding-top: 5px;
  }

  .main {
    background-color: #F2F2F2;
  }
</style>