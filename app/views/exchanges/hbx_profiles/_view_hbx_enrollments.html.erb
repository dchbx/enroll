<br/>
<div class="row">
  <div class = "col-md-10 table-responsive" id="terminated_enrollemnts"> 
        <h3 class='title'></h3>
        <% if  @health_enrollments.present? %>
          <table class = "table table-striped table-bordered">
            <thead>        
              <tr>
                <th></th>
                <th>Medical <br/> Plans</th>
                <th>Coverage <br/> Year</th> 
                <th>Effective <br/> Date</th>
                <th>Termination <br/> Date</th>
                <th>Reinstate<br/> Date</th>
                <th>Transmit <br /> Carrier EDI?</th>
                <th>DC Health<br/> Link ID</th>
              </tr>
            </thead>
            <%@health_enrollments.each do |enrollment| %>
              <tr>
              <td> <input type="checkbox" name="selected_<%=enrollment.id%>" value="checked" /></td>
              <td id="name"><%= enrollment.benefit_group.reference_plan.name%> </td>
              <td><%= enrollment.effective_on.year%></td>
              <td><%= enrollment.effective_on%></td>
              <td><%= enrollment.terminated_on%></td>
              <td id="reinstate"><%= Date.today%></td>
              <td>
              <input type="checkbox" name="myTextEditBox" value="checked" />
              </td>
              <td id="name1"><%= enrollment.hbx_id%></td>
              </tr>
            <%end%>
          </table>
        <%end%>
            
        <% if  @dental_enrollments.present? %>
          <table class = "table table-striped table-bordered">
            <thead>              
              <tr>
                <th></th>
                <th>Dental<br/>Plans</th>
                <th>Coverage<br/>Year</th> 
                <th>Effective<br/>Date</th>
                <th>Termination<br/>Date</th>
                <th>Reinstate<br/> Date</th>
                <th>Transmit <br /> Carrier EDI?</th>
                <th>DC Health Link ID</th>
              </tr>
            </thead>
            
            <% @dental_enrollments.each do |enrollment| %>
              <tr>
              <td> <input type="checkbox" name="selected_<%=enrollment.id%>" value="checked" /></td>
              <td id="name"><%= enrollment.benefit_group.reference_plan.name%> </td>
              <td><%= enrollment.effective_on.year%></td>
              <td><%= enrollment.effective_on%></td>
              <td><%= enrollment.terminated_on%></td>               
              <td><%= Date.today%></td>
              <td>
              <input type="checkbox" name="myTextEditBox" value="checked" />
              </td>
              <td><%= enrollment.hbx_id%></td>
              </tr>
            <%end%>
        <%end%>
         </table>
  </div>

  <div class="col-md-2">
    <%= link_to "Submit", "", data: {toggle: "modal", target: "#reinstate_confirm"} %>
  </div>
</div>


<!-- modal --> 
<div class="modal fade" id="reinstate_confirm" tabindex="-1" role="dialog" aria-labelledby="brokerConfirm" role="document">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" style="border-bottom:none">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" style="display:inline;">You are about to reinstate the following enrollment </br> on behalf of </h4>
        <p style="display:inline;font-size:15px;"><%=@person.first_name%></p>
      </div> 
      <div id="test"> 
      </div>
      <div id="test1"> 
      </div>
      <div id="reinstate1"> 
      </div>
      <div style="margin-left:20px;">
      <div>comments:</div>
      <textarea rows="4" cols="75"> </textarea>
      </div>
        <div class="modal-footer" style="margin-right:190px">
          <button type="button" class="btn btn-default btn-default" data-dismiss="modal">Close</button>
          <%= submit_tag "Confirm", class: 'btn btn-primary  mtz' %>
        </div>
      
    </div>
  </div>
</div>
<script type="text/javascript">
  $("div#reinstate_confirm" ).on('shown.bs.modal', function(event){
    $('#terminated_enrollemnts :checkbox:checked').each(function (){
     $('#test').html($(this).closest('tr').find("td#name").text()).css({"margin-left":"30px","font-size": "15px"});
     $('#test1').html($(this).closest('tr').find("td#name1").text()).css({"margin-left":"30px","font-size":"15px"});
     $('#reinstate1').html($(this).closest('tr').find("td#reinstate").text()).css({"margin-left":"30px","font-size":"15px"});
     });
  });
</script>