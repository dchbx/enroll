<br/>
<div class="">
  <div class = "table-responsive"> 
        <h3 class='title'></h3>
          <% if  @health_enrollments.present? %>
            <table class = "table table-striped table-bordered" style="table-layout: fixed;">
              <thead>        
                <tr>
                  <th>Medical <br/> Plans</th>
                  <th>Coverage <br/> Year</th> 
                  <th>Effective <br/> Date</th>
                  <th>Termination <br/> Date</th>
                  <th>Reinstate Date</th>
                  <th>Transmit <br /> Carrier EDI?</th>
                  <th>DC Health<br/> Link ID</th>
                </tr>
              </thead>
              <%@health_enrollments.each do |enrollment| %>
                <tr>
                <td><%= enrollment.benefit_group.reference_plan.name%> </td>
                <td><%= enrollment.effective_on%></td>
                <td><%= enrollment.terminated_on%></td>
               <!--  <td><%= enrollment.hbx_id%></td> -->
                <td><%= enrollment.coverage_kind%> </td>
                <td></td>
                <td></td>
                </tr>
              <%end%>
              </div>
            </table>
          <%end%>
          <% if  @dental_enrollments.present? %>
            <table class = "table table-striped table-bordered" style="table-layout: fixed;">
              <thead>              
                <tr>
                  <th>Dental<br/>Plans</th>
                  <th>Coverage<br/>Year</th> 
                  <th>Effective<br/>Date</th>
                  <th>Termination<br/>Date</th>
                  <th>Reinstate Date</th>
                  <th>Transmit <br /> Carrier EDI?</th>
                  <!-- <th>DC Health Link ID</th> -->
                </tr>
              </thead>
              
              <%@dental_enrollments.each do |enrollment| %>
                <tr>
                <td><%= enrollment.benefit_group.reference_plan.name%> </td>
                <td><%= enrollment.effective_on%></td>
                <td><%= enrollment.terminated_on%></td>
                <!-- <td><%= enrollment.hbx_id%></td> -->
                <td><%= enrollment.coverage_kind%> </td>
                <td></td>
                <td></td>
                </tr>
              <%end%>
          <%end%>
      <%= link_to "Submit", "", data: {toggle: "modal", target: "#reinstate_confirm"} %>
  </div>
</div>
<!-- modal --> 
<div class="modal fade" id="reinstate_confirm" tabindex="-1" role="dialog" aria-labelledby="brokerConfirm" role="document">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">You are about to reinstate the following enrollment</h4>
      </div>


        <div class="modal-footer">
          <%= submit_tag "Confirm", class: 'btn btn-primary  mtz' %>
          <button type="button" class="btn btn-default btn-default" data-dismiss="modal">Close</button>
        </div>
      
    </div>
  </div>
</div>