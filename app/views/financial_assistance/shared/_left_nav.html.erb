<nav class=" smartscroll-nav" id="mainnav" style="margin-left: 0px !important;">
  <ul class="nav nav-stacked" id="left-navigation">
    <%# We need to turn these links in to actual links or make it so we don't need fake a's %>

    <% unless defined?(@applicant) %>
      <li class="activer list-box step-tabs">
        <a href="<%= financial_assistance_applications_path %>">
          <i class="fa fa-arrow-circle-left white-font" aria-hidden="true"></i>
          View My Applications
        </a>
      </li>
      <li class="list-box step-tabs <%= li_nav_classes_for(:household_info) %> indent-w">
        <% if  @application.is_draft? %>
          <a href="<%= edit_financial_assistance_application_path(@application) %>">Household Info</a>
        <% else %>
          <a href="javascript:void(0);" class="cna">Household Info</a>
        <% end %>
      </li>
    <% else %>
      <li class="activer list-box step-tabs">
        <a href="<%= edit_financial_assistance_application_path(@application) %>">
          <i class="fa fa-arrow-circle-left white-font" aria-hidden="true"></i>
          My Household</a>
      </li>
    <% end %>

    <% if defined?(@applicant) %>
      <ul class="nav nav-stacked">
        <li class="list-box step-tabs <%= li_nav_classes_for(:income_and_coverage) %> income-style">
          <%= link_to go_to_step_financial_assistance_application_applicant_path(@application, @applicant, 1) do %>
            <% if @applicant.other_questions_complete? %>
              <span class="fa fa-check applicant-check"></span>
            <% end %>
            Income and Coverage Info
          <% end %>
        </li>

        <li class="list-box step-tabs <%= li_nav_classes_for(:tax_info) %> applicant-nav">
          <%= link_to go_to_step_financial_assistance_application_applicant_path(@application, @applicant, 2) do %>
            <% if @applicant.tax_info_complete? %>
              <span class="fa fa-check applicant-check"></span>
            <% end %>
            &nbsp Tax Info
          <% end %>
        </li>

        <li class="list-box step-tabs <%= li_nav_classes_for(:income) %>  applicant-nav">
          <%= link_to @applicant.incomes.present? ? financial_assistance_application_applicant_incomes_path(@application, @applicant) : "#", class: "#{left_nav_css(@applicant.incomes.present?)}" do %>
            <% if @applicant.incomes_complete? && @applicant.incomes.present? %>
              <span class="fa fa-check applicant-check"></span>
            <% end %>
            &nbsp Income
          <% end %>
        </li>

        <li class="list-box step-tabs <%= li_nav_classes_for(:income_adjustments) %> applicant-nav">
          <%= link_to @applicant.deductions.present? ? financial_assistance_application_applicant_deductions_path(@application, @applicant) : "#", class: "#{left_nav_css(@applicant.deductions.present?)}" do %>
            <% if @applicant.deductions_complete? && @applicant.deductions.present? %>
              <span class="fa fa-check applicant-check"></span>
            <% end %>
            &nbsp Income Adjustments
          <%end%>
        </li>

        <li class="list-box step-tabs <%= li_nav_classes_for(:health_coverage) %> applicant-nav">
          <%= link_to @applicant.benefits.present? ? financial_assistance_application_applicant_benefits_path(@application, @applicant) : "#", class: "#{left_nav_css(@applicant.benefits.present?)}" do %>
            <% if @applicant.benefits_complete? && @applicant.benefits.present? %>
              <span class="fa fa-check applicant-check"></span>
            <% end %>
            &nbsp Health Coverage
          <% end %>
        </li>

        <li class="list-box step-tabs <%= li_nav_classes_for(:other_questions) %> applicant-nav">
          <%= link_to other_questions_financial_assistance_application_applicant_path(@application, @applicant) do %>
            <% if @applicant.other_questions_complete? %>
              <span class="fa fa-check applicant-check"></span>
            <% end %>
            &nbsp Other Questions
          <% end %>
        </li>
      </ul>

    <% else %>

      <li class='list-box step-tabs <%= li_nav_classes_for(:relationships) %> indent-w'>
        <% if @application.incomplete_applicants?%>
          <% if @application.active_applicants.count > 1 %> <a class="cna">Family Relationships</a> <% end %>
        <% else %>
          <%= link_to 'Family Relationships', insured_family_relationships_path if @application.active_applicants.count > 1 and @application.is_draft?%>
        <% end %>
      </li>

      <li class="list-box step-tabs <%= li_nav_classes_for(:review_and_submit) %> indent-w">
        <% if @application.ready_for_attestation? and @application.is_draft? %>
          <%= link_to "Review and Submit", review_and_submit_financial_assistance_application_path(@application) %>
        <% else %>
          <a href="javascript:void(0);" class="cna">Review and Submit</a>
        <% end %>
      </li>
    <% end %>
  </ul>
</nav>
