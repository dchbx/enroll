<table class="table table-wrapper table-condensed group-selection-tbl">
  <tbody>

    <% @coverage_household.coverage_household_members.map(&:family_member).each_with_index do |family_member, index| %>
        <%
        is_primary = false
        is_coverage, errors = check_for_coverage(family_member, index)
        is_ineligible_for_individual = ineligible_due_to_non_dc_address(family_member)
        ineligible = !is_coverage || is_ineligible_for_individual
        %>

        <tr class="<%=coverage_tr_class(is_coverage, is_ineligible_for_individual)%>">
          <td width="20">
            <%= check_box_tag("family_member_ids[#{index}]", family_member.id, !ineligible, disabled: ineligible, readonly: is_primary, onclick: "return #{!is_primary};") %>
          </td>
          <td><%= label_tag("family_member_ids[#{index}]", "#{family_member.full_name} (Age : #{pluralize(calculate_age_by_dob(family_member.dob), 'year')})") %></td>
          <td><%= raw(errors.join(', ')) if errors.present? %></td>
          <td class="<%=coverage_td_class(is_ineligible_for_individual)%>" style="display: none;"><%= "This member has residency ineligibility for #{coverage_kind} coverage." %></td>
        </tr>
    <% end %>
  </tbody>  
</table>
