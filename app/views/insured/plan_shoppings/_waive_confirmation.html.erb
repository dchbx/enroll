<div class="modal fade" id="waive_confirm" tabindex="-1" role="dialog" aria-labelledby="waiveConfirm" role="document">
  <div class="modal-dialog">
    <div class="modal-content">
      <% if @waivable %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <% if @mc_coverage_kind == 'dental' %>
            <!-- translation needed? -->
            <h4 class="modal-title"><%= l10n("confirm_waive") %></h4>
          <% else %>
            <h4 class="modal-title"><%= l10n("select_waive_reason") %></h4>
          <% end %>
        </div>
        <%= form_tag(waive_insured_plan_shopping_path(enrollment.id), method: :post) do %>
          <% if @mc_coverage_kind == 'dental' %>
            <%= hidden_field_tag "waiver_reason", "" %>
          <% else %>
            <div class="modal-body">
              <%= select_tag "waiver_reason", options_for_select(HbxEnrollment::WAIVER_REASONS), include_blank: l10n("please_select_waive_reason") %>
            </div>v
          <% end %>
          <div class="modal-footer <%= pundit_class Family, :updateable?%>">
            <button type="button" class="btn btn-default" data-dismiss="modal"><%= l10n("close") %></button>
            <% if @mc_coverage_kind == 'dental' %>
              <!-- translation needed? -->
              <%= submit_tag l10n("confirm"), class: 'btn btn-primary', id: 'waiver_reason_submit', disabled: false %>
            <% else %>
              <%= submit_tag l10n("submit"), class: 'btn btn-primary', id: 'waiver_reason_submit', disabled: true %>
            <% end %>
          </div>
        <% end %>
      <% else # not @waivable %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title"><%= l10n("unable_to_waive_coverage") %></h4>
        </div>
        <div class="modal-body">
          <%= l10n("insured.plan_shoppings.you_can_not_waive_confirmation_msg") %>
        </div>
        <div class="modal-footer">
        </div>
      <% end %>
    </div>
  </div>
</div>
